# Autonomous Orchestrator Framework - Environment Variables
# =========================================================
# Copy this file to .env and fill in your values.

# ============================================
# REQUIRED
# ============================================

# Claude Code OAuth Token
# Get this by running: claude setup-token
CLAUDE_CODE_OAUTH_TOKEN=your-oauth-token-here

# ============================================
# DATABASE (choose one option)
# ============================================

# Option 1: External Database (Supabase, Neon, Railway, etc.)
# Use with: docker-compose --profile external-db up
# DATABASE_URL=postgresql://user:password@host:5432/coding_agent_harness

# Option 2: Bundled PostgreSQL (via Docker Compose)
# Use with: docker-compose --profile with-db up
# No DATABASE_URL needed - docker-compose.yml constructs it from POSTGRES_* variables

# Option 3: Local Development Database
# Start postgres: docker-compose --profile dev-db up postgres-dev
# Then run the app locally with this URL:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/coding_agent_harness

# ============================================
# OPTIONAL - Work Tracking Backends
# ============================================

# Linear API Key (for Linear backend)
# Get from: https://linear.app/YOUR-TEAM/settings/api
# LINEAR_API_KEY=lin_api_xxxxxxxxxxxxx

# ============================================
# OPTIONAL - Docker Configuration
# ============================================

# API server port (default: 8080)
# API_PORT=8080

# Workspace directory for projects (default: ./workspaces)
# WORKSPACE_PATH=./workspaces

# ============================================
# OPTIONAL - Bundled PostgreSQL Configuration
# ============================================
# These settings apply when using docker-compose --profile with-db
# or docker-compose --profile dev-db

# Database name (default: coding_agent_harness)
# POSTGRES_DB=coding_agent_harness_db

# Database user (default: postgres)
# POSTGRES_USER=postgres

# Database password (default: postgres) - CHANGE THIS IN PRODUCTION!
# POSTGRES_PASSWORD=postgres

# PostgreSQL port for bundled database (default: 5433 for with-db, 5432 for dev-db)
# POSTGRES_PORT=5433

# ============================================
# OPTIONAL - Agent Configuration
# ============================================

# Default model for agents
# AGENT_MODEL=claude-opus-4-5-20251101

# Maximum agent sessions (default: 1000)
# MAX_SESSIONS=1000
